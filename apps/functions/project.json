{
  "name": "functions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/functions/src",
  "projectType": "application",
  "tags": ["scope:firebase", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/../../dist/apps/functions"],
      "options": {
        "commands": [
          "npx esbuild apps/functions/src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/apps/functions/index.js --sourcemap --external:firebase-admin --external:firebase-functions",
          "cp apps/functions/package.json dist/apps/functions/"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx nx run functions:build",
          "firebase serve --only functions --port=5001"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "firebase deploy --only functions"
      }
    }
  }
}
