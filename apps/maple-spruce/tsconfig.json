{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/maple-spruce/src/*"],
      "@maple/ts/domain": ["libs/ts/domain/src/index.ts"],
      "@maple/ts/validation": ["libs/ts/validation/src/index.ts"],
      "@maple/ts/firebase/firebase-config": ["libs/ts/firebase/firebase-config/src/index.ts"],
      "@maple/ts/firebase/api-types": ["libs/ts/firebase/api-types/src/index.ts"],
      "@maple/firebase/database": ["libs/firebase/database/src/index.ts"],
      "@maple/firebase/functions": ["libs/firebase/functions/src/index.ts"]
    },
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "../../apps/maple-spruce/.next/types/**/*.ts",
    "../../dist/apps/maple-spruce/.next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../libs/ts/domain/src/**/*.ts",
    "../../libs/ts/validation/src/**/*.ts",
    "../../libs/ts/firebase/firebase-config/src/**/*.ts",
    "../../libs/ts/firebase/api-types/src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next"
  ]
}
