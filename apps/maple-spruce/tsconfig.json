{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "composite": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "../../apps/maple-spruce/.next/types/**/*.ts",
    "../../dist/apps/maple-spruce/.next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../libs/ts/domain/src/**/*.ts",
    "../../libs/ts/validation/src/**/*.ts",
    "../../libs/ts/firebase/firebase-config/src/**/*.ts",
    "../../libs/ts/firebase/api-types/src/**/*.ts",
    "../../libs/react/theme/src/**/*.ts",
    "../../libs/react/theme/src/**/*.tsx",
    "../../libs/react/ui/src/**/*.ts",
    "../../libs/react/ui/src/**/*.tsx",
    "../../libs/react/auth/src/**/*.ts",
    "../../libs/react/auth/src/**/*.tsx",
    "../../libs/react/layout/src/**/*.ts",
    "../../libs/react/layout/src/**/*.tsx",
    "../../libs/react/data/src/**/*.ts",
    "../../libs/react/data/src/**/*.tsx",
    "../../libs/react/signals/src/**/*.ts",
    "../../libs/react/signals/src/**/*.tsx",
    "../../libs/react/instructors/src/**/*.ts",
    "../../libs/react/instructors/src/**/*.tsx",
    "../../libs/react/classes/src/**/*.ts",
    "../../libs/react/classes/src/**/*.tsx"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    ".next",
    "**/*.stories.ts",
    "**/*.stories.js"
  ]
}
